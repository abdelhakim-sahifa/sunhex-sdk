{
  "name": "@sunhex/protocol",
  "version": "1.0.1",
  "description": "The official SunHex Quantum Protocol SDK for decentralized identity.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abdelhakim-sahifa/sunhex-sdk.git"
  },
  "homepage": "https://github.com/abdelhakim-sahifa/sunhex-sdk#readme",
  "bugs": {
    "url": "https://github.com/abdelhakim-sahifa/sunhex-sdk/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "sunhex",
    "identity",
    "decentralized",
    "crypto",
    "quantum",
    "aes-gcm",
    "stateless"
  ],
  "author": "Abdelhakim-Sahifa",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.53.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}